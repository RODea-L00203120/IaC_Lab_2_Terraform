{
  "name": "IaC Terraform AWS",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "amazonwebservices.aws-toolkit-vscode",
        "davidanson.vscode-markdownlint",
        "streetsidesoftware.code-spell-checker",
        "mushan.vscode-paste-image"
      ]
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/root/.ssh,readonly,type=bind",
    "source=${localEnv:HOME}/.aws,target=/root/.aws,type=bind",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "postCreateCommand": "terraform --version && aws --version && kubectl version --client && docker --version && helm version && eksctl version",
  "remoteUser": "root"
}