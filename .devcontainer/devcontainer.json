{
  "name": "IaC Terraform AWS",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
  // Infrastructure & Language Tools
  "hashicorp.terraform",
  "ms-python.python",
  "ms-azuretools.vscode-docker",
  "ms-kubernetes-tools.vscode-kubernetes-tools",
  "amazonwebservices.aws-toolkit-vscode",
  
  // Documentation Quality
  "davidanson.vscode-markdownlint",
  "streetsidesoftware.code-spell-checker",
  "mushan.vscode-paste-image"
]
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/root/.ssh,readonly,type=bind",
    "source=${localEnv:HOME}/.aws,target=/root/.aws,type=bind"
  ],
  "postCreateCommand": "terraform --version && aws --version && kubectl version --client",
  "remoteUser": "root"
}